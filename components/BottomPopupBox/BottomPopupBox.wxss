.buttom-popup-box-component {
    position: fixed;
    left: 0px;
    top: 0px;
    width: 100%;
    height: 100%;
    overflow: hidden;
    justify-content: center;
    z-index: -10;
    opacity: 0;
    display: none;
}

.buttom-popup-box-component.show {
    display: block;
    z-index: 998;
    opacity: 1;
}

.buttom-popup-box-component.show.animate .popup-box {
    transform: translateY(0);
}

.buttom-popup-box-component.show .popup-box-cover {
    z-index: 997;
}

.buttom-popup-box-component.show .popup-box {
    z-index: 999;
}

.buttom-popup-box-component .popup-box-cover {
    background: rgba(0,0,0,0.66);
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
    left: 0px;
    top: 0px;
    z-index: -10;
}

.buttom-popup-box-component .popup-box {
    transition: transform .5s;
    z-index: -10;
    background: #fff;
    transform: translateY(100%);
    padding-top: 15px;
    padding-bottom: 15px;
    width: 100%;
    max-height: 90%;
    overflow: scroll-y;
    bottom: 0px;
    left: 0px;
    box-shadow: 0 7.5px 12.5px 0 rgba(0,0,0,0.15);
    position: fixed;
}

.buttom-popup-box-component .popup-box .popup-box-close {
    width: 14px;
    height: 14px;
    position: absolute;
    right: 0px;
    top: 5px;
    padding: 15px;
}