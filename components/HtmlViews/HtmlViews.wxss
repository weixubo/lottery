@-webkit-keyframes animateShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes animateShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.html-view-component .nc-images {
    margin-bottom: 12px;
    display: flex;
    flex-direction: column;
}

.html-view-component .nc-html-component {
    margin-bottom: 12px;
}

.html-view-component .nc-copy {
    margin-top: 0!important;
    border: solid 3px #e2dfda;
    box-sizing: border-box;
    width: 100%;
}

.html-view-component .nc-copy .copy-info-title {
    margin: 20px 20px 0;
    font-size: 15px;
    font-weight: bold;
    text-align: center;
    color: #716249;
    word-break: break-all;
}

.html-view-component .nc-copy .copy-info-title.value-empty {
    font-weight: 500;
    color: rgba(113,98,73,0.2);
}

.html-view-component .nc-copy .copy-info-content {
    margin: 18px 20px 0;
    padding: 18px 22px;
    background-color: #f8f7f6;
    line-height: 1.67em;
    font-size: 15px;
    color: #998e7d;
    word-break: break-all;
    text-align: center;
}

.html-view-component .nc-copy .copy-info-content.value-empty {
    font-weight: 500;
    color: rgba(153,142,125,0.35);
}

.html-view-component .nc-copy .copy-button {
    width: 180px;
    height: 40px;
    border-radius: 20px;
    background-color: #716249;
    font-size: 15px;
    font-weight: 500;
    color: #ffffff;
    line-height: 40px;
    text-align: center;
    margin: 20px auto;
    opacity: .3;
}

.html-view-component .nc-copy .copy-button.active {
    opacity: 1;
}

.html-view-component .nc-copy .copy-button.highlight {
    background-color: #4f4433;
}

.html-view-component .preview-image {
    width: 100%;
    height: 300px;
    background: #f1f1f1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.html-view-component image {
    animation: .5s animateShow forwards;
}