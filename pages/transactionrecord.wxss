@import "../__wuBaseWxss__/2.wxss";

page {
    background-color: #f0f0f0;
    width: 100%;
    height: 100%;
    font-family: "PingFangSC-Regular";
}

.transactionrecordpage .loading {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80%;
    margin-top: 70%;
}

.transactionrecordpage .loading image {
    width: 28px;
    height: 28px;
}

@-webkit-keyframes pageShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes pageShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.transactionrecordpage .transactionrecord-container {
    animation: .25s linear pageShow forwards;
    margin-top: 10px;
    padding-left: 15px;
    background: #fff;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item {
    padding: 16px 0px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-bottom: 1rpx solid rgba(0,0,0,0.1);
    padding-right: 15px;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item:last-child {
    border-bottom: none;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-meta {
    font-size: 12px;
    color: #1a1a1a;
    text-align: right;
    margin-top: 10px;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-meta .fix {
    position: relative;
    right: -7px;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-meta.error {
    color: #cc4b3d;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-line {
    display: flex;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-line.first {
    font-size: 15px;
    color: #1a1a1a;
    margin-bottom: 4px;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-line.second {
    font-size: 12px;
    color: #808080;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-line .amount-count {
    font-weight: bold;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-line view {
    flex: 0 0 auto;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-line view:first-child {
    flex: 1 1 auto;
}

.transactionrecordpage .transactionrecord-container .transactionrecord-list .transactionrecord-item .transactionrecord-item-line view.plus {
    color: #44b222;
}

.transactionrecordpage .transactionrecord-container .empty {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

.transactionrecordpage .transactionrecord-container .empty image {
    width: 120px;
    height: 136px;
    margin-top: -77px;
    align-self: center;
}

.transactionrecordpage .transactionrecord-container .empty .desc {
    font-size: 15px;
    color: rgba(0,0,0,0.5);
}

.transactionrecordpage .join-users-loadmore {
    font-size: 14px;
    color: #2573b8;
    text-align: center;
    padding-bottom: 100px;
    padding-top: 20px;
}

.transactionrecordpage .join-users-loadmore.highlight {
    opacity: .5;
}