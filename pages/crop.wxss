page {
    background-color: #000;
    width: 100%;
    height: 100%;
    font-family: "PingFangSC-Regular";
}

.crop-page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.crop-container {
    overflow: hidden;
    display: flex;
    justify-content: center;
}

.crop-container canvas {
    align-self: center;
    margin-top: -30px;
}

.crop-done {
    position: fixed;
    bottom: 0px;
    left: 0px;
    height: 54px;
    width: 100%;
    line-height: 54px;
    background-color: #333333;
    font-size: 15px;
    letter-spacing: .4px;
    text-align: center;
    color: #ffffff;
}

.crop-done .tip {
    width: 100%;
    position: absolute;
    top: -30px;
    text-align: center;
    font-size: 12px;
    color: rgba(255,255,255,0.4);
    height: 15px;
    line-height: 15px;
}

.crop-done.iPhoneX {
    bottom: 15px;
}

.crop-done.highlight {
    color: #aaa;
}