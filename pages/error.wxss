page {
    background-color: #f0f0f0;
    width: 100%;
    height: 100%;
    font-family: "PingFangSC-Regular";
}

.error-page {
    height: 100%;
}

.error-page.android .error button {
    border: none;
}

.error-page.android .error button:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    border: 1px inset rgba(0,0,0,0.12);
    border-radius: 48px;
    box-sizing: border-box;
    width: 200%;
    height: 200%;
    transform: scale(.5);
    transform-origin: left top;
}

.error-page .wraper {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
}

.error-page .error {
    margin-left: 36px;
    margin-right: 36px;
}

.error-page .error image {
    width: 100%;
}

.error-page .error .info-main {
    text-align: center;
    margin-top: 54px;
    margin-bottom: 10px;
    font-size: 18px;
    color: rgba(0,0,0,0.8);
    line-height: 1.8em;
}

.error-page .error .info-sub {
    text-align: center;
    font-size: 16px;
    color: rgba(0,0,0,0.4);
    line-height: 1.8em;
    margin-bottom: 74px;
}

.error-page .error.network-error button {
    visibility: hidden;
}

.error-page .error button {
    box-shadow: 0 2px 5px -2px rgba(0,0,0,0.1);
    flex-grow: 1;
    color: #fff;
    font-size: 18px;
    height: 47px;
    line-height: 47px;
    background: linear-gradient(90deg,#69a7ef,#9fccf9);
    margin: 0px 54px;
    border-radius: 24px;
    text-align: center;
    position: relative;
    border: .5px inset rgba(0,0,0,0.12);
}

.error-page .error button:after {
    display: none;
}

.error-page .error button.button-hover {
    background: #598ac1;
}