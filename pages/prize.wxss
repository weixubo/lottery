page {
    background-color: #f0f0f0;
    width: 100%;
    height: 100%;
    font-family: "PingFangSC-Regular";
}

.prizepage .main {
    height: 100%;
}

.prizepage .loading {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80%;
    margin-top: 70%;
}

.prizepage .loading image {
    width: 28px;
    height: 28px;
}

.prizepage .prize {
    margin-bottom: 186px;
}

.prizepage .prize .prize-info .prize-greeting {
    font-size: 20px;
    font-weight: bolder;
    letter-spacing: .5px;
    text-align: center;
    color: #c3a428;
    margin-top: 8px;
}

.prizepage .prize .prize-info .prize-name {
    margin-top: 6px;
    text-align: center;
    font-size: 15px;
    letter-spacing: .4px;
    color: rgba(0,0,0,0.6);
    padding-bottom: 35px;
    border-bottom: 1rpx solid rgba(0,0,0,0.1);
}

.prizepage .prize .prize-info .prize-remind {
    margin-top: 1px;
    line-height: 1.5em;
    font-size: 13px;
    letter-spacing: .3px;
    color: #575757;
    padding: 15px;
    background: #fff;
}

.prizepage .prize .prize-info .prize-remind .color-red {
    color: #cc4b3d;
}

.prizepage .prize .prize-info .prize-info-label {
    margin-top: 20px;
    padding-left: 15px;
    font-size: 13px;
    letter-spacing: .3px;
    color: #808080;
}

.prizepage .prize .prize-info .prize-info-contact {
    height: 60px;
    display: flex;
    padding: 0px 15px;
    margin-top: 10px;
    background-color: #fff;
}

.prizepage .prize .prize-info .prize-info-contact.highlight {
    background: #ddd;
}

.prizepage .prize .prize-info .prize-info-contact .prize-info-contact-value {
    font-size: 15px;
    letter-spacing: .4px;
    color: #333;
    align-self: center;
    flex-grow: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.prizepage .prize .prize-info .prize-info-contact .arrow-right {
    border: solid #c7c7cc;
    border-width: 0 2px 2px 0;
    display: inline-block;
    padding: 4px;
    transform: rotate(-45deg);
    position: relative;
    flex: 0 0 auto;
    margin-left: 10px;
    align-self: center;
    flex-grow: 0;
}

.prizepage .prize .prize-info textarea {
    margin-top: 10px;
    height: 90px;
    box-sizing: border-box;
    background-color: #fff;
    padding: 8px 10px;
    width: auto;
    font-size: 14px;
    color: #333;
}

.prizepage .prize .prize-info textarea.error {
    background-color: #ffedeb;
}

.prizepage .prize .prize-info .send-prize-contact {
    margin: 30px 15px 15px;
    position: relative;
    height: 44px;
}

.prizepage .prize .prize-info .send-prize-contact button {
    border-radius: 0px;
    position: absolute;
    right: 0px;
    top: 0px;
    width: 100%;
    height: 44px;
    line-height: 44px;
    text-align: center;
    background: #575757;
    font-size: 15px;
    letter-spacing: .4px;
    color: #fff;
}

.prizepage .prize .prize-info .send-prize-contact button.button-hover {
    background: #333;
}

.prizepage .disable {
    position: relative;
}

.prizepage .disable:after {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    z-index: 1;
    background: rgba(255,255,255,0.5);
}