@import "../__wuBaseWxss__/4.wxss";

page {
    background-color: #f0f0f0;
    width: 100%;
    height: 100%;
    font-family: "PingFangSC-Regular";
}

@-webkit-keyframes pageShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes pageShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.contactpage .main {
    animation: .25s linear pageShow forwards;
    height: 100%;
}

.contactpage .loading {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80%;
    margin-top: 70%;
}

.contactpage .loading image {
    width: 28px;
    height: 28px;
}

.contactpage .contact-info {
    padding-bottom: 100px;
}

.contactpage .contact-info .remind-info {
    margin: 1px 0px 18px;
    padding: 16px;
    background: #fff;
    font-size: 14px;
    letter-spacing: 1px;
    line-height: 1.71;
    color: #575757;
}

.contactpage .contact-info .remind-info .color-red {
    color: #cc4b3d;
}

.contactpage .contact-info .contact-info-list {
    margin: 0px 0px 30px;
}

.contactpage .contact-info .contact-info-list .contact-info-item {
    background-color: #ffffff;
    padding: 15px 19px;
    margin-bottom: 12px;
}

.contactpage .contact-info .contact-info-list .contact-info-item.highlight {
    background: #ddd;
}

.contactpage .contact-info .contact-info-list .contact-info-item .contact-info-item-user {
    display: flex;
    align-items: center;
}

.contactpage .contact-info .contact-info-list .contact-info-item .contact-info-item-user image {
    width: 22px;
    height: 22px;
    border-radius: 50%;
    flex: 0 0 auto;
}

.contactpage .contact-info .contact-info-list .contact-info-item .contact-info-item-user text {
    margin-left: 7px;
    opacity: .6;
    font-size: 14px;
    letter-spacing: .3px;
    color: rgba(0,0,0,0.8);
    flex: 0 0 auto;
}

.contactpage .contact-info .contact-info-list .contact-info-item .contact-info-item-user .contact-info-item-user-empty {
    color: rgba(0,0,0,0.2);
    flex: 1 1 auto;
    text-align: right;
}

.contactpage .contact-info .contact-info-list .contact-info-item .contact-info-item-contact {
    border-top: 1rpx solid rgba(0,0,0,0.1);
    margin-top: 10px;
    padding-top: 15px;
    font-size: 15px;
    letter-spacing: .3px;
    color: #000000;
    opacity: .6;
    line-height: 1.85em;
    word-wrap: break-word;
}

.contactpage .contact-info .contact-info-list .contact-info-item .contact-info-item-contact .phone {
    line-height: 1em;
    display: inline-block;
    position: relative;
    z-index: 10;
    color: #4990e2;
    margin-right: 5px;
    margin-left: 5px;
}

.contactpage .contact-info .contact-info-list .contact-info-item .contact-info-item-contact .phone:first-child {
    margin-left: 0px;
}

.contactpage .contact-info .contact-info-list .contact-info-item .contact-info-item-contact .text {
    display: inline-block;
    line-height: 1em;
}

.contactpage .contact-group .contact-label {
    font-size: 14px;
    margin-left: 36px;
    margin-bottom: 10px;
    margin-top: 10px;
    color: #999;
}

.contactpage .copy-all-button {
    position: fixed;
    width: 100%;
    left: 0px;
    bottom: 0px;
    border-top: 1rpx solid rgba(0,0,0,0.12);
    background: #fff;
    z-index: 110;
}

.contactpage .copy-all-button .bottom-button-button-wraper {
    padding: 15px 13px;
    height: 47px;
    display: flex;
}

.contactpage .copy-all-button .bottom-button-button-wraper .padding {
    flex: 0 0 auto;
    width: 10px;
}

.contactpage .copy-all-button .bottom-button-button-wraper .download-button {
    flex: 1 1 50%;
    height: 47px;
    line-height: 47px;
    text-align: center;
    background-color: #575757;
    font-size: 15px;
    font-weight: bold;
    color: #fff;
}

.contactpage .copy-all-button .bottom-button-button-wraper .download-button.highlight {
    background-color: #333333;
}

.contactpage .copy-all-button .bottom-button-button-wraper .bottom-button-button {
    flex: 1 1 50%;
    box-sizing: border-box;
    height: 47px;
    line-height: 47px;
    font-size: 15px;
    background-color: #fff;
    color: #575757;
    border: solid 1px #575757;
}

.contactpage .copy-all-button .bottom-button-button-wraper .bottom-button-button.highlight {
    background-color: #bfbfbf;
}

.contactpage .copy-all-button.iPhoneX {
    bottom: 15px;
}

.contactpage .download-box .loading-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 200px;
}

.contactpage .download-box .loading-container image {
    width: 28px;
    height: 28px;
}

.contactpage .download-box .download-error {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 200px;
    font-size: 16px;
    color: #333;
    text-align: center;
}

.contactpage .download-box .download-info {
    margin-top: 30px;
}

.contactpage .download-box .download-info .tip {
    font-size: 13px;
    color: #808080;
}

.contactpage .download-box .download-info .link {
    font-size: 15px;
    color: #575757;
    word-break: break-all;
    padding: 15px;
    margin-top: 10px;
}

.contactpage .download-box .download-info .copy {
    height: 44px;
    background-color: #575757;
    line-height: 44px;
    text-align: center;
    font-size: 15px;
    color: #ffffff;
    margin-top: 20px;
}

.contactpage .download-box .download-info .copy.highlight {
    background-color: #333333;
}