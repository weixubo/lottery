page {
    background-color: #f0f0f0;
    width: 100%;
    height: 100%;
    font-family: "PingFangSC-Regular";
}

page::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.squaregamespage .loading {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80%;
    margin-top: 70%;
}

.squaregamespage .loading image {
    width: 28px;
    height: 28px;
}

.squaregamespage .group-list {
    margin-top: 10px;
    padding-bottom: 60px;
}

.squaregamespage .group-list .item {
    border-bottom: solid 1rpx #e6e6e6;
}

.squaregamespage .square-loadmore {
    font-size: 13px;
    color: #2573b8;
    text-align: center;
    padding-top: 20px;
}

.squaregamespage .square-loadmore.highlight {
    opacity: .5;
}